---
- name: "Converge"
  hosts: "all"
  tasks:
    # replace these tasks with whatever you find suitable to test
    - name: "Copy something to test use of synchronize module"
      ansible.builtin.copy:
        src: "/etc/hosts"
        dest: "/tmp/hosts-from-controller"
        mode: 0700

    - name: "Include {{ bootstrap_role_meta_namespace }}.{{ bootstrap_role_meta_role_name }}"
      tags:
        - "{{ bootstrap_role_meta_namespace }}.{{ bootstrap_role_meta_role_name }}"
      ansible.builtin.include_role:
        name: "{{ bootstrap_role_meta_namespace }}.{{ bootstrap_role_meta_role_name }}"
